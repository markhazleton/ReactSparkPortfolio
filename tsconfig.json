{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true, // Enables faster builds with incremental compilation
    "noEmit": true // Prevents emitting files during 'npm run dev'
  },
  "include": ["src"],
  "exclude": ["node_modules", "docs"] // Updated to exclude docs instead of dist
}
